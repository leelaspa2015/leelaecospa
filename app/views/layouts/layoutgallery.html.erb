<script>
$(document).ready(function(){
$('#success').hide();
$('#danger').hide();
 
$('#submit').click(function(){
  var x = document.forms["contactform"]["name"].value;
    var y = document.forms["contactform"]["from"].value;
    var z = document.forms["contactform"]["message"].value;
    var w = true;
    if (x == null || x == "") {
        $('#danger').html("Please enter your name.");
        w = false;
        $('#danger').show();
    }
     if (y == null || y == "") {
        $('#danger').html("Please enter your email.");
        $('#danger').show();
        w = false;
     }
     if (z == null || z == "") {
        $('#danger').html("Please enter a message.");
        w = false;
        $('#danger').show();
     }
    if(w) {
$.post("app_code/mail.php", $("#contactform").serialize(),  function(response) {
$('#success').html(response);
$('#success').show();
$('#danger').hide();
});
return false;
    }
});
 
});
</script>
